<Application x:Class="MediaMetadataEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Light.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}" />
            <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}" />
            <Style TargetType="ListBox" BasedOn="{StaticResource ModernListBox}" />
            <Style TargetType="ComboBox" BasedOn="{StaticResource ModernComboBox}" />
            <Style TargetType="CheckBox" BasedOn="{StaticResource ModernCheckBox}" />
            <Style TargetType="Label" BasedOn="{StaticResource ModernLabel}" />
            <Style TargetType="TextBlock" BasedOn="{StaticResource ModernTextBlock}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
